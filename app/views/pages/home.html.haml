- content_for :home do
  .wrapper.uk-animation-fade
    .hero
      #logo
        %img{:alt => "Tinquer", :src => "http://tinquer.com/wp-content/uploads/2014/03/logo-tinquer.png"}
        %a.uk-button.uk-button-large.uk-width-1-1.uk-margin-top{"data-uk-smooth-scroll" => "", :href => "#featured"} Featured projects

  .uk-width-1-1#featured
    .uk-grid
      - @projects.each do |project|
        -if project.featured?
          .uk-width-medium-1-3{style: 'padding-left: 0;'}
            - if project.photo?
              = cl_image_tag(project.photo.path, :width => 500, :height => 321, :crop => :fill, :id => 'cover')
