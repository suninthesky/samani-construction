!!!
%html
  %head
    %title SamaniConstruction
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.uk-navbar{"data-uk-sticky" => "", class: ('nav-overlay' if content_for?(:home)) }
      .uk-container.uk-container-center
        %a.uk-navbar-brand.uk-hidden-small{:href => root_path} Logo
        %ul.uk-navbar-nav.uk-hidden-small
          %li
            = link_to 'Projects', projects_path
          %li
            %a{:href => ""} Contact
        %a.uk-navbar-toggle.uk-visible-small{"data-uk-offcanvas" => "", :href => "#offcanvas"}
        .uk-navbar-brand.uk-navbar-center.uk-visible-small Logo

    - if content_for?(:home)
      = yield(:home)
    - else
      = yield
