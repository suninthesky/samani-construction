!!!
%html
  %head
    %meta{:content => "width=device-width, height=device-height, initial-scale=1", :name => "viewport"}
    %title Samani Construction
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.uk-navbar.nav-overlay{"data-uk-sticky" => "", class: ('uk-animation-slide-top' if content_for?(:home)) }
      .uk-container.uk-container-center
        %a.uk-navbar-brand.uk-hidden-small{:href => root_path} Logo
        %ul.uk-navbar-nav.uk-hidden-small
          %li
            = link_to 'Projects', projects_path
          %li
            %a{:href => ""} Contact
        %a.uk-navbar-toggle.uk-visible-small{"data-uk-offcanvas" => "", :href => "#"}
        %a.uk-navbar-brand.uk-navbar-center.uk-visible-small{:href => root_path} Logo

    - if content_for?(:home)
      = yield(:home)
    - else
      = yield
